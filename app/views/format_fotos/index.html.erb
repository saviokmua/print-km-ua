<div id="tariff">
<h1>Всі формати фото</h1>
<table style="width:100%;" border="1">
  <tr>
    <td width="100%">Назва формату фото</td>
    <td colspan="2" ><%= link_to "Додати", new_format_foto_path, class: 'btn btn-warning' %></td>
  </tr>
  <% @format_foto.each do |format_foto| %>
    <tr>
      <td><%= format_foto.name %></td>
      <td><%= link_to "Редактувати", edit_format_foto_path(format_foto), class: 'btn btn-warning' %></td>
      <td><%= link_to "Видалити ", format_foto_path(format_foto), method: :delete, data: { confirm: "Ви дійсно хочете видалити формат фото?" }, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
</table>
</div>